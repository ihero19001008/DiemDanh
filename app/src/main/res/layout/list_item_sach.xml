<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingTop="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:text="Phạt mức 1: "/>

                <TextView
                    android:id="@+id/txtTenSach"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="Hello"
                    android:textSize="17dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:text="Phạt mức 2: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:id="@+id/txtSoLuongSach"
                    android:layout_height="fill_parent"
                    android:text="Hello"
                    android:layout_weight="5"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:text="Phạt mức 3: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:id="@+id/txtSoLuongSach2"
                    android:layout_height="fill_parent"
                    android:text="Hello"
                    android:layout_weight="5"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:text="Thưởng mức 1: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:id="@+id/txtSoLuongSach3"
                    android:layout_height="fill_parent"
                    android:text="Hello"
                    android:layout_weight="7"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:text="Thưởng mức 2: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:id="@+id/txtSoLuongSach4"
                    android:layout_height="fill_parent"
                    android:text="Hello"
                    android:layout_weight="7"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img_close"
            android:id="@+id/imgCloseSach"/>


    </LinearLayout>

</LinearLayout>